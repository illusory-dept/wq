!p
build_map:{[code]len:#code;jump:alloc len;stack:()
  N[len;ch:code _n
    $.[ch="[";stack: stack, _n]
    $.[ch="]";open_:last stack; stack:take[#stack-1;stack]
      jump[open_]:_n;jump[_n]:open_]];jump}
bf_run:{[code]tape:alloc 30000;ptr:0;jump:build_map code;ip:0;len:#code
  W[ip<len;op:code[ip]
    $.[op=">";ptr:ptr+1;$.[ptr>=#tape;tape:tape,0]]
    $.[op="<";ptr:ptr-1;$.[ptr<0;tape:0,tape;ptr:0]]
    $.[op="+";tape[ptr]:tape[ptr]+1]
    $.[op="-";tape[ptr]:tape[ptr]-1]
    $.[op=".";print chr tape ptr]
    $.[op=",";inp:input"input";$[#inp>0;tape[ptr]:ord inp 0;tape[ptr]:0]
      println fmt["tape[ptr]={}";tape ptr]]
    $.[op="[";$.[tape[ptr]=0;ip:jump ip]]
    $.[op="]";$.[tape[ptr]~0;ip:jump ip]];ip:ip+1]}
